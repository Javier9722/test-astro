---
import Layout from "../components/layout.astro";
/* En astro no es necesario una funcion async,  */
const response = await fetch('https://jsonplaceholder.typicode.com/posts');
const data = await response.json(); // obteniendo todos los datos en formato json [{},{},...,{}]
---

<Layout title="Posts" pageDescription="Lista de posteos">
  <h1>Mis Publicaciones</h1>
  <div class="cont">
    {
      data.map((el: { id: unknown; title: unknown; body: unknown; }) => (
        <div class="group">
          <span class="id">{el.id}</span>
          <h2 class="title">{el.title}</h2>
          <p class="parr">{el.body}</p>
        </div>
      ))
    }
  </div>
</Layout>



<style>
  .cont {
    display: grid;
    gap: 10px;
    grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
    justify-items: center;
  }
  .group {
    border-radius: 20px;
    background-color: rgba(0, 0, 0, 0.8);
    padding: 20px;
    max-width: 600px;
    box-sizing: border-box;
  }
  .id {
    color: white;
  }
  .title {
    color: cornflowerblue;
  }
  .parr {
    color: white;
  }
</style>

